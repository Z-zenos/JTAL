{{!
    @template mod_wavefront/model_controls

    Model config buttons template

    Example context (json):
    {
    	"editing": true,
        "editurl": "./mod/wavefront/edit_model.php",
        "id": 7,										// model id
        "wavefrontid": 10,								// wavefront activity id
        "cmid": 4086,
        "candelete": true,
        "delurl": "./mod/wavefront/delete_model.php",
        "arenabled": true,
        "arurl": "./mod/wavefront/ar.php",
        "canembed": true
    }
}}

{{#editing}}

{{#canembed}}
    <div class="embed-shortcode">
    	<span>[wavefront id={{id}}]</span>
    </div>
{{/canembed}}

<div class='model-management'>
	<form action="{{editurl}}">
    	<input type="hidden" name="id" value="{{id}}" />
        <input type="hidden" name="cmid" value="{{cmid}}" />
        <input class="btn btn-secondary" type="submit" Value="{{#str}} editmodel, mod_wavefront {{/str}}" />
    </form>
    
{{#candelete}}
    <form action="{{delurl}}">
        <input type="hidden" name="id" value="{{id}}" />
        <input type="hidden" name="cmid" value="{{cmid}}" />
        <input class="btn btn-secondary" type="submit" Value="{{#str}} deletemodel, mod_wavefront {{/str}}" />
    </form>
{{/candelete}}

</div>

{{/editing}}

{{#arenabled}}
<div class='ar'>
	<form target="_blank" action="{{arurl}}">
    	<input type="hidden" name="m" value="{{id}}" />
        <input type="hidden" name="w" value="{{wavefrontid}}" />
        <input class="btn btn-secondary" type="submit" Value="{{#str}} arview, mod_wavefront {{/str}}" />
    </form>
</div>
{{/arenabled}}