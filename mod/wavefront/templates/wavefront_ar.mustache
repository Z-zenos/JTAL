    	"mtlfile": "https%3A%2F%2Fmoodle.localhost%2Fpluginfile.php%2F16%2Fmod_wavefront%2Fmodel%2F1%2Fskeleton.mtl",
    	"objfile": "https%3A%2F%2Fmoodle.localhost%2Fpluginfile.php%2F16%2Fmod_wavefront%2Fmodel%2F1%2Fskeleton.obj",
    	"stagename": "wavefront_6252f4a09d0b9",
