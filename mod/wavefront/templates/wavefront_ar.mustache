<div data-baseurl={{baseurl}} data-mtl={{mtlfile}} data-obj={{objfile}} id="{{stagename}}" class="ar-stage"
 	 data-stagewidth={{stagewidth}} data-stageheight={{stageheight}} data-cameraangle={{cameraangle}}
	 data-cameranear={{cameranear}} data-camerafar={{camerafar}} data-camerax={{camerax}} data-cameray={{cameray}} data-cameraz={{cameraz}}
	 data-controlx={{controlx}} data-controly={{controly}} data-controlz={{controlz}}>
</div>
 
{{#js}}
    require(['mod_wavefront/wavefront_ar'],
        function(wavefront_ar) {
            wavefront_ar.init('{{stagename}}', {{arscale}});
        }
    );
{{/js}}